# Install system build deps needed for cryptography and other wheels
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    build-essential \
    git \
    libssl-dev \
    libffi-dev \
    python3-dev \
    pkg-config \
    ca-certificates \
    gcc \
    g++ \
    make \
  && rm -rf /var/lib/apt/lists/*

# Install Rust toolchain for building cryptography wheels if necessary
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"
