# ==============================
# Nija Trading Bot Configuration
# ==============================

# Coinbase API Keys
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Coinbase PEM content (multi-line) - DO NOT try to export directly
# This will be read from the start.sh script
COINBASE_PEM_CONTENT="-----BEGIN PRIVATE KEY-----
<your_full_private_key_here>
-----END PRIVATE KEY-----"

# Trading mode settings
LIVE_TRADING=True           # True = live trades, False = dry run
DRY_RUN=False               # Same as above; for safety, keep DRY_RUN=False if LIVE_TRADING=True

# Trading parameters
BASE_CURRENCY=USD            # Your base fiat currency
TRADE_ASSET=BTC              # Main trading asset
POSITION_SIZE_PERCENT=5      # Percent of account equity per trade (min 2%, max 10%)
MAX_OPEN_TRADES=3            # Maximum concurrent trades
STOP_LOSS_PERCENT=2          # Default stop loss % per trade
TAKE_PROFIT_PERCENT=5        # Default take profit % per trade

# Logging & debug
LOG_LEVEL=INFO               # INFO, DEBUG, WARNING, ERROR
HEALTH_PORT=10000            # For health check endpoint
