{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "docker build -t nija-bot .",
    "buildEnvironment": "V3"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "bash -lc 'exec gunicorn app.wsgi:app --bind 0.0.0.0:$PORT --workers 2 --worker-class gthread --threads 2 --timeout 120 --log-level debug --capture-output'",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
