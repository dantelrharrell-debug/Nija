{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "docker build -t nija-trading-bot .",
    "buildEnvironment": "V3"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "gunicorn app.wsgi:app --bind 0.0.0.0:8080 --workers 2 --worker-class gthread --threads 1 --timeout 120 --graceful-timeout 120 --log-level debug --capture-output --enable-stdio-inheritance --log-file -",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
