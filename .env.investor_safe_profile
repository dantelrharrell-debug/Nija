# COINBASE_PEM_CONTENT=your_coinbase_pem_content_here

# ─────────────────────────────────────────────────────────────────
# TRADING MODE
# ─────────────────────────────────────────────────────────────────
LIVE_MODE=true

# Start with paper trading to learn the system
# LIVE_MODE=false  # Uncomment for paper trading mode

# ─────────────────────────────────────────────────────────────────
# PRO MODE (Not recommended for investor-safe)
# ─────────────────────────────────────────────────────────────────
PRO_MODE=false

# ─────────────────────────────────────────────────────────────────
# INVESTOR-SAFE POSITION SIZING
# ─────────────────────────────────────────────────────────────────
MIN_TRADE_PERCENT=0.02     # 2% minimum position
MAX_TRADE_PERCENT=0.08     # 8% maximum position (very conservative)
MAX_POSITIONS_ALLOWED=3    # Maximum 3 concurrent positions

# ─────────────────────────────────────────────────────────────────
# ACCOUNT BALANCE THRESHOLDS
# ─────────────────────────────────────────────────────────────────
MINIMUM_TRADING_BALANCE=50.0   # $50 minimum
MIN_CASH_TO_BUY=5.0           # $5 minimum per trade
EMERGENCY_STOP_BALANCE=30.0   # Emergency stop at $30

# ─────────────────────────────────────────────────────────────────
# TRADING PAIRS (CONSERVATIVE - Major coins only)
# ─────────────────────────────────────────────────────────────────
# Only trade the most liquid, stable pairs
TRADING_PAIRS=BTC-USD,ETH-USD

# Disable all volatile/small cap pairs
DISABLED_PAIRS=XRP-USD,XRPUSD,XRP-USDT,XRPUSDT,SOL-USD,AVAX-USD,DOGE-USD

# ─────────────────────────────────────────────────────────────────
# COPY TRADING (Recommended for investor-safe)
# ─────────────────────────────────────────────────────────────────
# Follow a proven master account for best results
COPY_TRADING_MODE=MASTER_FOLLOW
# MASTER_ACCOUNT_ID=your_master_account_id

# ─────────────────────────────────────────────────────────────────
# CONSERVATIVE TRADING SETTINGS
# ─────────────────────────────────────────────────────────────────
# Require highest quality setups only
MIN_SIGNAL_SCORE=6          # Require perfect 6/6 confirmations
MIN_ADX=30                  # Only very strong trends (ADX > 30)
MIN_VOLUME_MULTIPLIER=2.0   # Require 2x average volume

# ─────────────────────────────────────────────────────────────────
# DAILY PROFIT TARGETING (Not recommended for investor-safe)
# ─────────────────────────────────────────────────────────────────
DAILY_TARGET_ENABLED=false  # Focus on consistency, not daily targets

# ─────────────────────────────────────────────────────────────────
# LOGGING
# ─────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# ─────────────────────────────────────────────────────────────────
